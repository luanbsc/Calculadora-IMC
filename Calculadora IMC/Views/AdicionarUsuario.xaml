<Page x:Class="Calculadora_IMC.Views.AdicionarUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC"
      mc:Ignorable="d">

	<Grid>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Orientation="Vertical"
					Margin="20"
					Width="600">
            
            <Button Width="40" Height="40"
			Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
			FontSize="16"
			Content="&#xE72B;"
            Background="Transparent"
			BorderBrush="Transparent"
			Padding="0"
			Cursor="Hand"
			ToolTip="Voltar"/>

			<TextBlock Text="Cadastrar Usuário"
					   HorizontalAlignment="Center"
					   FontSize="24"
					   Margin="0 0 0 20"/>

			<!-- Nome -->
            <TextBlock Text="Nome:" Width="300"/>
			<TextBox Text="{Binding Usuario.Nome, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroNome}" Margin="0 0 0 10" Width="300"/>

			<!-- Idade -->
            <TextBlock Text="Idade:" Width="300"/>
			<TextBox Text="{Binding IdadeTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroIdade}" Margin="0 0 0 10" Width="300"/>

			<!-- Altura -->
            <TextBlock Text="Altura (m):" Width="300"/>
			<TextBox Text="{Binding AlturaTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroAltura}" Margin="0 0 0 10" Width="300"/>

			<!-- Peso -->
            <TextBlock Text="Peso (kg):" Width="300"/>
			<TextBox Text="{Binding PesoTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroPeso}" Margin="0 0 0 10" Width="300"/>

			<!-- Gênero -->
            <TextBlock Text="Gênero:" Width="300"/>
            <ComboBox ItemsSource="{Binding Generos}" SelectedItem="{Binding Usuario.Genero, ValidatesOnDataErrors=True}" Width="300"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroGenero}" Width="300"/>

			<!-- Botão -->
			<Button Content="Cadastrar"
					Width="200"
					Height="35"
					Margin="0 30 0 0"
					HorizontalAlignment="Center"
					Command="{Binding CadastrarCommand}"/>
		</StackPanel>
	</Grid>
</Page>
