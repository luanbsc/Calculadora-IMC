<Page x:Class="Calculadora_IMC.Views.AdicionarUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC" xmlns:viewmodels="clr-namespace:Calculadora_IMC.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AdicionarUsuarioViewModel}"
      mc:Ignorable="d"
      Background="#F7F5EB">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Orientation="Vertical"
					Margin="20"
					Width="600">
            
            <Button Width="40" Height="40"
			Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
			FontSize="16"
			Content="&#xE72B;"
            Background="Transparent"
			BorderBrush="Transparent"
			Padding="0"
			Cursor="Hand"
			ToolTip="Voltar"/>

			<TextBlock Text="Cadastrar Usuário"
					   HorizontalAlignment="Center"
					   FontSize="24"
					   Margin="0 0 0 20"
                       Style="{StaticResource PageTitle}"/>

			<!-- Nome -->
            <TextBlock Text="Nome:" Width="300" Style="{StaticResource LabelText}"/>
			<TextBox Text="{Binding Usuario.Nome, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"
                     Style="{StaticResource InputTextBox}"/>
            <TextBlock Text="{Binding ErroNome}" Style="{StaticResource ErrorLabel}"/>

			<!-- Idade -->
            <TextBlock Text="Idade:" Width="300" Style="{StaticResource LabelText}"/>
			<TextBox Text="{Binding IdadeTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"
                     Style="{StaticResource InputTextBox}"/>
            <TextBlock Text="{Binding ErroIdade}" Style="{StaticResource ErrorLabel}"/>

			<!-- Altura -->
            <TextBlock Text="Altura (m):" Width="300" Style="{StaticResource LabelText}"/>
			<TextBox Text="{Binding AlturaTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"
                     Style="{StaticResource InputTextBox}"/>
            <TextBlock Text="{Binding ErroAltura}" Style="{StaticResource ErrorLabel}"/>

			<!-- Peso -->
            <TextBlock Text="Peso (kg):" Width="300" Style="{StaticResource LabelText}"/>
			<TextBox Text="{Binding PesoTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"
                     Style="{StaticResource InputTextBox}"/>
            <TextBlock Text="{Binding ErroPeso}" Style="{StaticResource ErrorLabel}"/>

			<!-- Gênero -->
            <TextBlock Text="Gênero:" Width="300" Style="{StaticResource LabelText}"/>
            <ComboBox ItemsSource="{Binding Generos}" SelectedItem="{Binding Usuario.Genero, ValidatesOnDataErrors=True}" Width="300"/>
            <TextBlock Text="{Binding ErroGenero}" Style="{StaticResource ErrorLabel}"/>

			<!-- Botão -->
			<Button Content="Cadastrar"
					HorizontalAlignment="Center"
                    Width="100"
                    Height="30"
					Command="{Binding CadastrarCommand}"
                    Style="{StaticResource RoundedGreenButton}"
                    Margin="0 10 0 0"/>
		</StackPanel>
	</Grid>
</Page>
