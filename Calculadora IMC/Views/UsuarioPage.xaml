<Page x:Class="Calculadora_IMC.Views.UsuarioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC" xmlns:viewmodels="clr-namespace:Calculadora_IMC.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:UsuarioPageViewModel}"
      mc:Ignorable="d"
      Background="#F7F5EB">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/ListBoxStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel Margin="20" Width="600" HorizontalAlignment="Center">
            <!-- Botão de voltar página -->
            <Button Width="40" Height="40"
            Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
            FontSize="16"
            Content="&#xE72B;"
            Background="Transparent"
            BorderBrush="Transparent"
            Padding="0"
            Cursor="Hand"
            ToolTip="Voltar"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Título -->
                <TextBlock Text="Informações do Usuário" Style="{StaticResource PageTitleTextBlock}" Margin="70 0 0 20"/>

                <!-- Botão que redireciona para tela de adicionar nova medição -->
                <Button Content="&#xE710;"
                Margin="60 0 0 0"
                Height="25"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20"
                Foreground="Green"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                Cursor="Hand"
                Command="{Binding AddMedicaoCommand}"
                CommandParameter="{Binding}"
                ToolTip="Adicionar nova medição"/>

                <!-- Botão que abre Window exibindo gráfico do histórico de medições -->
                <Button Content="&#xE9D2;"
                Margin="10 0 0 0"
                Height="25"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                Cursor="Hand"
                Command="{Binding OpenChartCommand}"
                CommandParameter="{Binding}"
                ToolTip="Visualizar gráfico"/>
            </StackPanel>

            <!-- Dados do usuário -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Nome: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.Nome}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Idade: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.Idade}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Altura: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.Altura, StringFormat={}{0} m}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Peso: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.PesoUltimaMedicao, StringFormat={}{0} kg}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Gênero: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.Genero}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="IMC: " Style="{StaticResource LabelTextBlock}"/>

                <TextBlock Text="{Binding Usuario.IMCUltimaMedicao, StringFormat={}{0:F2}}" Style="{StaticResource ValueTextBlock}"/>
            </StackPanel>

            <!-- Histórico de medições do usuário -->
            <TextBlock Text="Histórico de Medições:"
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Center"/>

            <ListBox Width="400" Height="160"
            ItemsSource="{Binding Usuario.Medicoes}"
                     Style="{StaticResource MedicoesListBox}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Peso, StringFormat={}{0} kg}"
                           FontSize="16" Width="230"/>

                            <TextBlock Text="{Binding Data, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                           FontSize="16" Width="auto"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>

</Page>