<Page x:Class="Calculadora_IMC.Views.UsuarioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC" xmlns:viewmodels="clr-namespace:Calculadora_IMC.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:UsuarioPageViewModel}"
      mc:Ignorable="d"
      Background="#F7F5EB">

    <Grid>
        <StackPanel Margin="20" Width="600" HorizontalAlignment="Center">
            <Button Width="40" Height="40"
            Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
            FontSize="16"
            Content="&#xE72B;"
            Background="Transparent"
            BorderBrush="Transparent"
            Padding="0"
            Cursor="Hand"
            ToolTip="Voltar"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Informações do Usuário"
                HorizontalAlignment="Center"
                FontSize="24"
                Margin="70 0 0 20"/>

                <Button Content="&#xE710;"
                Margin="60 0 0 0"
                Height="25"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20"
                Foreground="Green"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                Cursor="Hand"
                Command="{Binding AddMedicaoCommand}"
                CommandParameter="{Binding}"
                ToolTip="Adicionar nova medição"/>

                <Button Content="&#xE9D2;"
                Margin="10 0 0 0"
                Height="25"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="0"
                Cursor="Hand"
                Command="{Binding OpenChartCommand}"
                CommandParameter="{Binding}"
                ToolTip="Visualizar gráfico"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Nome: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.Nome}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Idade: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.Idade}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Altura: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.Altura, StringFormat={}{0} m}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Peso: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.PesoUltimaMedicao, StringFormat={}{0} kg}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Gênero: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.Genero}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="IMC: " 
                FontSize="16"
                FontWeight="Bold"
                VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Usuario.IMCUltimaMedicao, StringFormat={}{0:F2}}" 
                FontSize="16"
                VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Histórico de Medições:"
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Center"/>

            <ListBox Width="400" Height="160"
            ItemsSource="{Binding Usuario.Medicoes}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Peso, StringFormat={}{0} kg}"
                           FontSize="16" Width="250"/>

                            <TextBlock Text="{Binding Data, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                           FontSize="16" Width="auto"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>

</Page>