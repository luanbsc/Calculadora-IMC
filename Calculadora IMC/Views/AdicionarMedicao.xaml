<Page x:Class="Calculadora_IMC.Views.AdicionarMedicao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC" xmlns:viewmodels="clr-namespace:Calculadora_IMC.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AdicionarMedicaoViewModel}"
      mc:Ignorable="d"
      Background="#F7F5EB">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
					Orientation="Vertical"
					Margin="20"
					Width="600">

            <Button Width="40" Height="40"
			Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
			FontSize="16"
			Content="&#xE72B;"
            Background="Transparent"
			BorderBrush="Transparent"
			Padding="0"
			Cursor="Hand"
			ToolTip="Voltar"/>

            <TextBlock Text="Adicionar nova medição"
					   HorizontalAlignment="Center"
					   FontSize="24"
					   Margin="0 0 0 140"/>

            <!-- Peso -->
            <TextBlock Text="Peso (kg):" Width="300"/>
            <TextBox Text="{Binding PesoTexto, ValidatesOnDataErrors=True}"
                     Width="300"
					 Height="30"
					 Padding="5"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding ErroPeso}" Margin="0 0 0 80" Width="300"/>

            <!-- Botão -->
            <Button Content="Adicionar"
					Width="200"
					Height="35"
					Margin="0 30 0 0"
					HorizontalAlignment="Center"
					Command="{Binding AdicionarMedicaoCommand}"/>
        </StackPanel>
    </Grid>
</Page>
