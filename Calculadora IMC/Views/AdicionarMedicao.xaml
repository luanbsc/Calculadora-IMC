<Page x:Class="Calculadora_IMC.Views.AdicionarMedicao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Calculadora_IMC" xmlns:viewmodels="clr-namespace:Calculadora_IMC.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AdicionarMedicaoViewModel}"
      mc:Ignorable="d"
      Background="#F7F5EB">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
					Orientation="Vertical"
					Margin="20"
					Width="600">

            <Button Width="40" Height="40"
			Command="{Binding GoBackCommand}"
            HorizontalAlignment="Left"
            FontFamily="Segoe MDL2 Assets"
			FontSize="16"
			Content="&#xE72B;"
            Background="Transparent"
			BorderBrush="Transparent"
			Padding="0"
			Cursor="Hand"
			ToolTip="Voltar"/>

            <TextBlock Text="Adicionar nova medição"
					   HorizontalAlignment="Center"
					   FontSize="24"
					   Margin="0 0 0 140"
                       Style="{StaticResource PageTitle}"/>

            <!-- Peso -->
            <TextBlock Text="Peso (kg):" Style="{StaticResource LabelText}"/>
            <TextBox Text="{Binding PesoTexto, ValidatesOnDataErrors=True}" Style="{StaticResource InputTextBox}" Padding="5"/>
            <TextBlock Text="{Binding ErroPeso}" Style="{StaticResource ErrorLabel}"/>

            <!-- Botão -->
            <Button Content="Adicionar"
					Width="200"
					Height="35"
					Margin="0 30 0 0"
					HorizontalAlignment="Center"
					Command="{Binding AdicionarMedicaoCommand}"
                    Style="{StaticResource RoundedGreenButton}"/>
        </StackPanel>
    </Grid>
</Page>
